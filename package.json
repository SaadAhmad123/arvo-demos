{
  "name": "arvo-demo",
  "description": "This project containes different Arvo modules for practice and demo",
  "version": "1.0.0",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "license": "MIT",
  "scripts": {
    "dev": "vite --host 0.0.0.0 --port 5001",

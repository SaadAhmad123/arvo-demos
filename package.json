{
  "name": "arvo-practice",
  "description": "This project containes different Arvo modules for practice and demo",
  "version": "1.0.0",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsup",
    "dev": "tsx watch src/index.ts",
    "start": "tsup && node dist/index.cjs",
    "lint": "biome check --fix",
    "format": "biome format --fix"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "just-install": "^2.0.2",
    "ts-node": "^10.9.2",
    "tsup": "^8.3.6",
    "tsx": "^4.19.2",
    "typescript": "^5.5.4"
  },
  "packageManager": "pnpm@9.15.1",
  "engines": {
    "node": ">=19"
  },
  "dependencies": {
    "arvo-core": "^3.0.6",
    "arvo-event-handler": "^3.0.6",
    "xstate": "5.20.1",
    "zod": "3.25.67",
    "zod-to-json-schema": "^3.24.5"
  }
}

    "@types/react-is": "^19",
    "@vitejs/plugin-react": "^4.4.1",
    "globals": "^16.0.0",
    "typescript": "~5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-node-polyfills": "^0.24.0"
  },
  "packageManager": "pnpm@9.15.1",
  "engines": {
    "node": ">=19"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.8",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-icons": "^5.5.0",
    "react-is": "^19.1.0",
    "react-markdown": "^10.1.0",
    "react-router": "^7.8.0",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
